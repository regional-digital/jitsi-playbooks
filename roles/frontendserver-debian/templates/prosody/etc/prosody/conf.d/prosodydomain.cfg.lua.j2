plugin_paths = { "/usr/share/jitsi-meet/prosody-plugins/" }

-- domain mapper options, must at least have domain base set to use the mapper
muc_mapper_domain_base = "{{ item }}";

external_service_secret = "{{ turncredentials_secret }}";
external_services = {
     { type = "stun", host = "{{ turnservername }}", port = 443 },
     { type = "turn", host = "{{ turnservername }}", port = 443, transport = "udp", secret = true, ttl = 86400, algorithm = "turn" },
     { type = "turns", host = "{{ turnservername }}", port = 443, transport = "tcp", secret = true, ttl = 86400, algorithm = "turn" }
};

cross_domain_bosh = false;
consider_bosh_secure = true;
-- https_ports = { }; -- Remove this line to prevent listening on port 5284

-- https://ssl-config.mozilla.org/#server=haproxy&version=2.1&config=intermediate&openssl=1.1.0g&guideline=5.4
ssl = {
    protocol = "tlsv1_2+";
    ciphers = "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384"
}

unlimited_jids = {
    "focus@auth.{{ item }}",
    "jvb@auth.{{ item }}"
}

VirtualHost "{{ item }}"
    -- enabled = false -- Remove this line to enable this host
    authentication = "{{ authentication | default('anonymous') }}"
    -- Properties below are modified by jitsi-meet-tokens package config
    -- and authentication above is switched to "token"
{% if prosodyDomainConfig[item].authentication is defined %}
    app_id="{{ app_id }}"
    app_secret="{{ app_secret }}"
{% else %}
    --app_id="example_app_id"
    --app_secret="example_app_secret"
{% endif %}
    -- Assign this host a certificate for TLS, otherwise it would use the one
    -- set in the global section (if any).
    -- Note that old-style SSL on port 5223 only supports one certificate, and will always
    -- use the global one.
    ssl = {
        key = "/etc/prosody/certs/{{ item }}.key";
        certificate = "/etc/prosody/certs/{{ item }}.crt";
    }
    av_moderation_component = "avmoderation.{{ item }}"
    speakerstats_component = "speakerstats.{{ item }}"
    conference_duration_component = "conferenceduration.{{ item }}"
    -- we need bosh
    modules_enabled = {
        "bosh";
        "pubsub";
        "ping"; -- Enable mod_ping
        "speakerstats";
        "external_services";
        "conference_duration";
        "muc_lobby_rooms";
        "av_moderation";
    }
    c2s_require_encryption = false
    lobby_muc = "lobby.{{ item }}"
    main_muc = "conference.{{ item }}"
    -- muc_lobby_whitelist = { "recorder.{{ item }}" } -- Here we can whitelist jibri to enter lobby enabled rooms

Component "conference.{{ item }}" "muc"
    restrict_room_creation = true
    storage = "memory"
    modules_enabled = {
        "muc_meeting_id";
        "muc_domain_mapper";
        "polls";
{% if authentication is defined %}
        "token_verification";
{% endif %}
    }
    admins = { "focus@auth.{{ item }}" }
    muc_room_locking = false
    muc_room_default_public_jids = true

-- internal muc component
Component "internal.auth.{{ item }}" "muc"
    storage = "memory"
    modules_enabled = {
        "ping";
    }
    admins = { "focus@auth.{{ item }}", "jvb@auth.{{ item }}" }
    muc_room_locking = false
    muc_room_default_public_jids = true

VirtualHost "auth.{{ item }}"
    ssl = {
        key = "/etc/prosody/certs/auth.{{ item }}.key";
        certificate = "/etc/prosody/certs/auth.{{ item }}.crt";
    }
    modules_enabled = {
        "limits_exception";
    }
    authentication = "internal_hashed"

-- Proxy to jicofo's user JID, so that it doesn't have to register as a component.
Component "focus.{{ item }}" "client_proxy"
    target_address = "focus@auth.{{ item }}"

Component "speakerstats.{{ item }}" "speakerstats_component"
    muc_component = "conference.{{ item }}"

Component "conferenceduration.{{ item }}" "conference_duration_component"
    muc_component = "conference.{{ item }}"

Component "avmoderation.{{ item }}" "av_moderation_component"
    muc_component = "conference.{{ item }}"

Component "lobby.{{ item }}" "muc"
    storage = "memory"
    restrict_room_creation = true
    muc_room_locking = false
    muc_room_default_public_jids = true
