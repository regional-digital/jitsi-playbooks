videobridge {
    apis {
        rest {
            # enable colibri rest interface
            enabled = true
        }
        xmpp-client {
            configs {
                shard1 {
                    hostname = "deb-signal01"
                    domain = "auth.openjitsi"
                    username = "jvb"
                    password = "{{ prosody_user_jvb_password }}"
                    muc_jids = "JvbBrewery@internal.auth.open.jitsi"
                    muc_nickname = "{{ hostname }}"
                    disable_certificate_verification = true
                }
                shard2 {
                    hostname = "deb-signal01"
                    domain = "auth.closedjitsi"
                    username = "jvb"
                    password = "{{ prosody_user_jvb_password }}"
                    muc_jids = "JvbBrewery@internal.auth.closed.jitsi"
                    muc_nickname = "{{ hostname }}"
                    disable_certificate_verification = true
                }
                shard3 {
                    hostname = "deb-signal02"
                    domain = "auth.openjitsi"
                    username = "jvb"
                    password = "{{ prosody_user_jvb_password }}"
                    muc_jids = "JvbBrewery@internal.auth.open.jitsi"
                    muc_nickname = "{{ hostname }}"
                    disable_certificate_verification = true
                }
                shard4 {
                    hostname = "deb-signal02"
                    domain = "auth.closedjitsi"
                    username = "jvb"
                    password = "{{ prosody_user_jvb_password }}"
                    muc_jids = "JvbBrewery@internal.auth.closed.jitsi"
                    muc_nickname = "{{ hostname }}"
                    disable_certificate_verification = true
                }

            }
        }
    }
    http-servers {
        private {
            host = "0.0.0.0"
            port = "9000"
        }
        public {
            port = "9090"
        }
    }
    octo {
        enabled = true
        bind-address = "{{ internal_interface }}"
        bind-port = "4096"
        region = "BW"
    }
    rest {
        shutdown {
            enabled = true
        }
    }
    websockets {
        enabled = true
        domain = "{{ frontenddnsname }}:443"
        server-id = "{{ hostname }}"
        tls = true
    }
}
